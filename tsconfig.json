{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "jsx": "react",
    "jsxFactory": "h",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "~/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
